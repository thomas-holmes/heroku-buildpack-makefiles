#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

# configure
# if [ -f configure ]; then
#   echo "-----> Configuring"
#   ./configure 2>&1 | indent
# fi

# make

if [[ -f .makefiles ]]; then
    makefiles=$(cat $1/.makefiles)
else
    makefiles=$(find . -type f Makefile)
fi

echo "-----> Compiling with Make"
for makefile in ${makefiles}; do
    pushd $(dirname $makefile)

    echo "-----> Compiling $makefile with Make"
    make 2>&1 | indent

    popd
done
