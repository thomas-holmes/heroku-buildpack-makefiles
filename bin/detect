#!/usr/bin/env bash
# bin/detect <build-dir>


if [[ -f $1/.makefiles ]]; then
    echo "Found $1/.makefiles list"
elif
    makefiles=$(find . -type f -name Makefile)

    if [[ -n "$makefiles" ]]; then
        echo "Found Makefiles\n${makefiles}"
    fi
else
    echo "No .makefiles listing or Makefiles found"
fi
